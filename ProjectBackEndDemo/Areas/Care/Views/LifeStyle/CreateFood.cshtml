@inject ProjectBackEndDemo.BL.Helpers.ISelectHelper slcthHelper
@{
    ViewData["Title"] = "CreateFood";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
    var AnimalList = new SelectList(slcthHelper.GetAnimals(), "Id", "Name"); 
}


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjectBackEndDemo.Areas.Care.Models.FoodVM



<div class="container">
    <h1>Create Food</h1>

    <form asp-area="Care" asp-controller="LifeStyle" asp-action="CreateFood" method="post" class="form-group">

        <div asp-validation-summary="All" class="text-danger">   </div>

        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" placeholder="Name " class="form-control" />
        <span class="text-danger" asp-validation-for="Name">  </span>
        <br />


        <label asp-for="Description">Description</label>
        <input type="text" asp-for="Description" placeholder="Description " class="form-control" />
        <span class="text-danger" asp-validation-for="Description">  </span>
        <br />


        <label asp-for="AnimalIds"> Select Animals </label>
        <select multiple asp-items="AnimalList" asp-for="AnimalIds">
           
        </select>

        <input type="submit" class="btn btn-primary" name="name" value="submit" />





    </form>


</div>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
