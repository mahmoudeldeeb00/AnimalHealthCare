@inject ProjectBackEndDemo.BL.Helpers.ISelectHelper slcthHelper
@{
    ViewData["Title"] = "CreateFood";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
    var AnimalList = new SelectList(slcthHelper.GetAnimals(), "Id", "Name");
    var Culuture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;

}


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjectBackEndDemo.Areas.Care.Models.FoodVM

<link href="~/css/createfood.css" rel="stylesheet" />
@if (Culuture == "ar-EG")
{

    <link href="~/css/createfood-ar.css" rel="stylesheet" />
}





<div class="user-form">
    <h3 class="heading">Create Food</h3>
    <form asp-area="Care" asp-controller="LifeStyle" asp-action="CreateFood" method="post">
        <div asp-validation-summary="All" class="text-danger">   </div>

        <div class="form-section text-section food-section">
            <label for="my-food">Food Name</label>
            <div class="input-section">
                <input type="text" asp-for="Name" id="my-food" class="food-name" placeholder="Enter Food Name" required />
                <div class="input-icon">
                    <i class="fa-solid fa-file"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="Name">  </span>

        </div>
        <div class="form-section text-section descrip-section">
            <label for="my-descrip">Food Description</label>
            <div class="input-section">
                <input type="text" asp-for="Description" id="my-descrip" class="food-descrip" placeholder="Enter Food Description" required />
                <div class="input-icon">
                    <i class="fa-solid fa-file"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="Description">  </span>

        </div>
        <div class="form-section select-section">
            <label for="my-pet">Choose Pet</label>
            <div class="input-section">
                <select asp-items="AnimalList" asp-for="AnimalIds" multiple id="my-pet" class="user-pet">
                    <option disabled selected>Choose Pet</option>

                </select>
                <div class="select-icon">
                    <i class="fa-solid fa-box"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="AnimalIds">  </span>

        </div>
        <div class="form-section save-section">
            <button type="submit" class="save-btn">Create</button>
        </div>
    </form>
</div>













<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/createfood.js"></script>