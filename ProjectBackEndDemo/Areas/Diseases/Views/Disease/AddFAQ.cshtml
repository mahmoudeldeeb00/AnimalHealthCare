
@{
    ViewData["Title"] = "AddFAQ";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
    var Culuture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;

}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjectBackEndDemo.Areas.Diseases.Models.FAQVM

<link href="~/css/createfaq.css" rel="stylesheet" />
@if (Culuture == "ar-EG")
{
    <link href="~/css/createfaq-ar.css" rel="stylesheet" />


}



<div class="user-form">
    <h3 class="heading">Create Disease FAQ</h3>
    <div asp-validation-summary="All" class="text-danger">   </div>

    <form asp-area="Diseases" asp-controller="Disease" asp-action="AddFAQ" method="post" >
        <div class="form-section text-section">
            <label for="my-que">Question</label>
            <div class="input-section">
                <input type="text" asp-for="Question" id="my-que" class="que-text" placeholder="Enter The Question" required />
                <div class="input-icon">
                    <i class="fa-solid fa-file"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="Question">  </span>

        </div>
        <div class="form-section area-section">
            <label for="my-ans">Answere</label>
            <div class="input-section">
                <textarea asp-for="Answer" id="my-ans" class="ans-text" placeholder="Enter Question Answere"></textarea>
                <div class="input-icon">
                    <i class="fa-solid fa-file"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="Answer">  </span>

        </div>
        <div class="form-section save-section">
            <button type="submit" class="save-btn">Create</button>
        </div>
    </form>
</div>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/createfaq.js"></script>