
@{
    ViewData["Title"] = "CreateMedicine";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
}

<h1>CreateMedicine</h1>


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjectBackEndDemo.Areas.Diseases.Models.MedicineVM



<div class="container">
    <h1>Create Medicine </h1>
    <div asp-validation-summary="All" class="text-danger">   </div>
    <form asp-area="Diseases" asp-controller="Disease" asp-action="CreateMedicine" method="post" class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" placeholder="Name " class="form-control" />
        <span class="text-danger" asp-validation-for="Name">  </span>
        <br />

        <label asp-for="HasSideEffect"> Has Side Effect!</label>
        <input type="checkbox" asp-for="HasSideEffect" />
        <br />

        <label asp-for="Price">Price</label>
        <input type="number" asp-for="Price" placeholder="Price " class="form-control" />
        <span class="text-danger" asp-validation-for="Price">  </span>
        <br />


        <label asp-for="Temperature">Temperature</label>
        <input type="text" asp-for="Temperature" placeholder="Temperature " class="form-control" />
        <span class="text-danger" asp-validation-for="Temperature">  </span>
        <br />

        <label asp-for="Expirty">Expirty</label>
        <input type="text" asp-for="Expirty" placeholder="Expirty " class="form-control" />
        <span class="text-danger" asp-validation-for="Expirty">  </span>
        <br />
        <label asp-for="KeyWords">KeyWords</label>
        <input type="text" asp-for="KeyWords" placeholder="KeyWords " class="form-control" />
        <span class="text-danger" asp-validation-for="KeyWords">  </span>
        <br />
        <input type="submit" class="btn btn-primary" name="name" value="submit" />





    </form>


</div>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>