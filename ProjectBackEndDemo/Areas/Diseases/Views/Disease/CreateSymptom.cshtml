
@{
    ViewData["Title"] = "CreateSymptom";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
}


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjectBackEndDemo.Areas.Diseases.Models.SymptomVM



<div class="container">
    <h1>Create Symptom </h1>
    <div asp-validation-summary="All" class="text-danger">   </div>
    <form asp-area="Diseases" asp-controller="Disease" asp-action="CreateSymptom" method="post" class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" placeholder="Name " class="form-control" />
        <span class="text-danger" asp-validation-for="Name">  </span>
        <br />


        <label asp-for="Description">Description</label>

        <textarea asp-for="Description" placeholder="Description " class="form-control">

           </textarea>
        <span class="text-danger" asp-validation-for="Description">  </span>
        <br />
        <label asp-for="KeyWords">KeyWords</label>
        <input type="text" asp-for="KeyWords" placeholder="KeyWords " class="form-control" />
        <span class="text-danger" asp-validation-for="KeyWords">  </span>
        <br />


        <input type="submit" class="btn btn-primary"  value="submit" />





    </form>


</div>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

