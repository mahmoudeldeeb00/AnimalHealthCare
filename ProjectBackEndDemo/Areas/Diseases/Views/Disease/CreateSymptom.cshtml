
@{
    ViewData["Title"] = "CreateSymptom";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
    var Culuture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;

}


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjectBackEndDemo.Areas.Diseases.Models.SymptomVM

<link href="~/css/createsymptom.css" rel="stylesheet" />

@if (Culuture == "ar-EG")
{

    <link href="~/css/createsymptom-ar.css" rel="stylesheet" />
}


<div class="user-form">
    <h3 class="heading">Create Symptom</h3>
    <form asp-area="Diseases" asp-controller="Disease" asp-action="CreateSymptom" method="post">
        <div asp-validation-summary="All" class="text-danger">   </div>

        <div class="form-section text-section symptom-section">
            <label for="my-symptom">Symptom Name</label>
            <div class="input-section">
                <input type="text" asp-for="Name" id="my-symptom" class="symptom-name" placeholder="Enter Disease Symptom" required />
                <div class="input-icon">
                    <i class="fa-solid fa-file"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="Name">  </span>

        </div>
        <div class="form-section area-section">
            <label for="my-descrip">Symptom Description</label>
            <div class="input-section">
                <textarea asp-for="Description" id="my-descrip" class="symptom-descrip" placeholder="Enter Symptom Description"></textarea>
                <div class="input-icon">
                    <i class="fa-solid fa-file"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="Description">  </span>

        </div>
        <div class="form-section text-section keyword-section">
            <label for="my-keyword">Symptom Keywords</label>
            <div class="input-section">
                <input type="text"  asp-for="KeyWords"  id="my-keyword" class="symptom-keyword" placeholder="Enter Symptom Keywords" required />
                <div class="input-icon">
                    <i class="fa-solid fa-file"></i>
                </div>
            </div>
        </div>
        <div class="form-section save-section">
            <button type="submit" class="save-btn">Create</button>
        </div>
        <div class="form-section disease-link">
            <a asp-area="Diseases" asp-controller="Disease" asp-action="CreateDisease">Create Disease</a>
        </div>
    </form>
</div>
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script src="~/js/createsymptom.js"></script>