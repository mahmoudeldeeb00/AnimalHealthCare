
@{
    ViewData["Title"] = "ViewMedicine";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers




@model ProjectBackEndDemo.Areas.Diseases.Models.MedicineVM


<div classs="Container">
    <h1> View Medicine </h1>
    <form asp-action="SearchMedicines" asp-controller="Disease" asp-area="Diseases" method="get">
        <input id="search" name="search" type="search" placeholder="Search Medicines " />
        <input type="submit" hidden />
    </form>

    <span class="text-primary"> @Model.Name  </span> <br />
    <span class="text-primary"> @Model.Price  </span> <br />
    <span class="text-primary"> @Model.Temperature  </span> <br />
    <span class="text-primary"> @Model.HasSideEffect  </span> <br />

    <ul class="list-group">
        <ul class="list-group">
            @foreach (var (x, y) in Model.DieasesNames.Zip(Model.DieasesIds))
            {
                <li class="list-group-item">

                    <a asp-area="Diseases" asp-controller="Disease" asp-action="ViewDisease" asp-route-id="@y">@x</a>


                </li>

            }
        </ul>
    </ul>

    <br />








</div>
