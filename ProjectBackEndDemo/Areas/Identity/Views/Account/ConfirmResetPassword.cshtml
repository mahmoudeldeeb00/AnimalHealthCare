
@{
    ViewData["Title"] = "ConfirmResetPassword";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
    var Culuture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;

}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using ProjectBackEndDemo.Resource
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> AppLng
<link href="~/css/confirmresetpassword.css" rel="stylesheet" />

@if (Culuture == "ar-EG")
{

    <link href="~/css/confirmresetpassword-ar.css" rel="stylesheet" />

}

<div class="confirm-section">
    <h3 class="heading">@AppLng["Confirm Reset Password"] </h3>
    <div class="container">
        <p>@AppLng["Your Password Reseted Successfully, Please Sign In Again ..."]</p>
        <a asp-area="Identity" asp-controller="Account" asp-action="Login">@AppLng["Login"]</a>
    </div>
</div>

<script src="/js/jquery-3.6.0.min.js"></script>
<script src="~/js/confirmresetpassword.js"></script>