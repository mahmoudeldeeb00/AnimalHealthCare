@model ProjectBackEndDemo.Areas.Identity.Models.EditProfileVM

@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
}

<h1>EditProfile</h1>

<form asp-area="Identity" asp-controller="Account" asp-action="EditProfile" method="post" enctype="multipart/form-data">
    <input hidden type="text" asp-for="Id" />

    <label asp-for="UserName">User Name</label>
    <input type="text" asp-for="UserName" />
    <br />
    <label asp-for="Email">Email</label>
    <input type="email" asp-for="Email" />
    <br />
    <label asp-for="PhoneNumber">PhoneNumber</label>
    <input type="text" asp-for="PhoneNumber" />
    <br />
    <label asp-for="BirthDay">BirthDay</label>
    <input type="datetime" asp-for="BirthDay" />
    <br />
    <label asp-for="ProfilePicture">Profile Picture</label>
    <input type="file" asp-for="ProfilePicture" />
    <br />


    <input class="btn btn-primary" value="submit" type="submit" />

</form>