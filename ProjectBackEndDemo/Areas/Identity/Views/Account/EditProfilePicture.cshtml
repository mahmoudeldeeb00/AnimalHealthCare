@model ProjectBackEndDemo.Areas.Identity.Models.EditProfilePictureVM

@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "EditProfilePicture";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
}


<div class="container">
    <h1>EditProfilePicture</h1>

    <form style="padding:15px" class=" card form-group" asp-area="Identity" asp-controller="Account" asp-action="EditProfilePicture" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input hidden type="text" asp-for="Id" />
        <input hidden type="text" asp-for="ProfilePic" />


        <br />
        <br />
        <div style=" margin : 0 auto ; text-align:center ">
            <label asp-for="ProfilePicture">
                <img style="width: 200px; height: 200px;cursor:pointer; border-radius: 50%;" src="~/Files/UsersProfilePictures/@Model.ProfilePic" />

            </label>
            <br />
            <br />

            <br />
            <input class=" btn btn-success" type="file" asp-for="ProfilePicture" value="Upload Photo" />
            <span class="text-danger"  asp-validation-for="ProfilePicture"> </span>

        </div>
        <br />
        <br />
        <br />

        <input class="btn btn-primary" value="submit" type="submit" />

    </form>
</div>