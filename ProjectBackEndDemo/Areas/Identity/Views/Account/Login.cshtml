
@{
    Layout = "~/Views/Layouts/MainLayout.cshtml";
    ViewBag.Title = "Login";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjectBackEndDemo.Areas.Identity.Models.LoginVM

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>


    <div asp-validation-summary="All" class="text-danger">   </div>
    <form asp-area="Identity" asp-controller="Account" asp-action="Login" method="post" class="form-group">

        <input type="text" asp-for="UserName" placeholder="email" class="form-control" />
        <span asp-validation-for="UserName">  </span>


        <input type="password" asp-for="Password" placeholder="password" class="form-control" />

        <span asp-validation-for="Password">  </span>

        <input type="checkbox" asp-for="RemmemberMe" />


        <input type="submit" value="Login" class="btn btn-primary" />






    </form>
    <div class="text-sm-center"> don't Have account ?  <a asp-area="Identity" asp-controller="Account" asp-action="Registration"> Sign Up </a></div>
</body>
</html>
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>