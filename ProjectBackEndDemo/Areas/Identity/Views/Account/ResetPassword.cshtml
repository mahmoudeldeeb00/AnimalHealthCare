@model ProjectBackEndDemo.Areas.Identity.Models.ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<h1>ResetPassword</h1>

<form asp-action="ResetPassword" asp-controller="Account" asp-area="Identity" method="POST">
    <div class="msg">Reset Password</div>


    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Token" />

    <div class="input-group">
        <span class="input-group-addon">
            <i class="material-icons">lock</i>
        </span>
        <div class="form-line">
            <input type="password" class="form-control" placeholder="Password" asp-for="Password">
        </div>
        <div class="">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="material-icons">lock</i>
        </span>
        <div class="form-line">
            <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword">
        </div>
        <div class="">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <button class="btn btn-block btn-lg bg-pink waves-effect" type="submit">Reset</button>
</form>
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>