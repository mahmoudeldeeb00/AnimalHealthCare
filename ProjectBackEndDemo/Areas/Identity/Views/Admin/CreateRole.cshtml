@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
    var Culuture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;

}
<link href="~/css/createrole.css" rel="stylesheet" />

@if (Culuture == "ar-EG")
{

    <link href="~/css/createrole-ar.css" rel="stylesheet" />
}

<div class="user-form">
    <h3 class="heading">Create Role</h3>
    <form asp-area="Identity" asp-controller="Account" asp-action="CreateRole" method="post">
        <div class="form-section name-section">
            <label for="my-role">Role Name</label>
            <div class="input-section">
                <input type="text" name="rolename" id="my-role" class="user-name" placeholder="Enter Role Name" required />
                <div class="name-icon">
                    <i class="fa-solid fa-file"></i>
                </div>
            </div>
        </div>
        <div class="form-section save-section">
            <button type="submit" class="save-btn">Create Role</button>
        </div>
    </form>
</div>


<script src="/js/jquery-3.6.0.min.js"></script>
<script src="~/js/createrole.js"></script>