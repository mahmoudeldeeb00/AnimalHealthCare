
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model ProjectBackEndDemo.Areas.Identity.Models.EditRoleVM





<h1>EditRole</h1>

<div asp-validation-summary="All" class="text-danger">   </div>

<form asp-area="Identity" asp-controller="Admin" asp-action="EditRole" method="post">
    <input style="display:none" asp-for="Id" type="text" value="@Model.Id" />


    <label> New Name : </label>
    <input asp-for="Name" type="text" value="@Model.Name" />
    <span asp-validation-for="Name" class="text-danger"></span>


    <input type="submit" value="Save Changes " class="btn btn-primary" />

</form>
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>