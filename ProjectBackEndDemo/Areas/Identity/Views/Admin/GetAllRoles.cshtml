@using Microsoft.AspNetCore.Identity
@using ProjectBackEndDemo.Resource
@model IEnumerable<IdentityRole>


@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> AppLng

@{
    Layout = "~/Views/Layouts/MainLayout.cshtml";
}
@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "GetAllRoles";
}

<h1>GetAllRoles</h1>



<table class="table-bordered" border="1px solid #ccc">

    <tr>
        <td> Role Id </td>
        <td> Role Name </td>
        <td> @AppLng["edit"] </td>

        <td> @AppLng["delete"]</td>


    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td> @item.Id</td>
    <td> @item.Name </td>
    <td> <a class="btn btn-primary" asp-area="Identity" asp-controller="Admin" asp-action="EditRole" asp-route-id="@item.Id"> @AppLng["edit"] </a></td>

    <td> <a class="btn btn-danger" asp-area="Identity" asp-controller="Admin" asp-action="DeleteRole" asp-route-id="@item.Id"> @AppLng["delete"] </a></td>

</tr>
    }


</table>

