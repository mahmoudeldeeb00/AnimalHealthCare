
@{
    Layout = "~/Views/Layouts/MainLayout.cshtml";
    ViewData["Title"] = "GetAllRoles";
}
@using Microsoft.AspNetCore.Identity
@using ProjectBackEndDemo.Resource
@using Microsoft.Extensions.Localization
@model IEnumerable<IdentityRole>


@inject IStringLocalizer<SharedResource> AppLng

@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers


<h1>GetAllRoles</h1>

<style>
    td {
        padding: 15px;
        text-align: center;
    }

    a {
        margin: 10px;
    }
</style>
<a class="btn btn-primary" asp-area="Identity" asp-controller="Admin" asp-action="CreateRole"> Add Role </a>
<a class="btn btn-primary" asp-area="Identity" asp-controller="Admin" asp-action="SignUsersToRoles"> SignUsersToRoles </a>
<a class="btn btn-primary" asp-area="Identity" asp-controller="Admin" asp-action="ViewFeedBacks"> View FeedBacks </a>


<br />
<br />



<table class="table-bordered">

    <tr class="th">
        <td class="text-primary"> Role Id </td>
        <td class="text-primary"> Role Name </td>
        <td class="text-primary"> @AppLng["edit"] </td>

        <td class="text-primary"> @AppLng["delete"]</td>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.Id</td>
            <td> @item.Name </td>
            <td> <a class="btn btn-primary" asp-area="Identity" asp-controller="Admin" asp-action="EditRole" asp-route-id="@item.Id"> @AppLng["edit"] </a></td>

            <td> <a class="btn btn-danger" asp-area="Identity" asp-controller="Admin" asp-action="DeleteRole" asp-route-id="@item.Id"> @AppLng["delete"] </a></td>

        </tr>
    }


</table>


