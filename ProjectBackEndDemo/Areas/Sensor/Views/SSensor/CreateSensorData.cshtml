
@{
    ViewData["Title"] = "CreateSensorData";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
}
@inject ProjectBackEndDemo.BL.Helpers.ISelectHelper slct 
@{ 
    var aniList = new SelectList(  slct.GetAnimals(),"Id","Name") ;
    var diseasList = new SelectList(slct.GetDiseases(), "Id", "Name");
} 

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model ProjectBackEndDemo.Areas.Sensor.Models.SensorDataVM
<div class="container">
    <h1>CreateSensorData</h1>
    <form asp-area="Sensor" asp-controller="SSensor" asp-action="CreateSensorData" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger">   </div>


        <br />
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" placeholder="Name " class="form-control" />
        <span class="text-danger" asp-validation-for="Name">  </span>
        <br />

        <br />
        <label asp-for="Description">Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span class="text-danger" asp-validation-for="Description">  </span>
        <br />

        <br />
        <label asp-for="HowToDeal">HowToDeal</label>
        <textarea class="form-control" asp-for="HowToDeal"></textarea>
        <span class="text-danger" asp-validation-for="HowToDeal">  </span>
        <br />


        <br />
        <label asp-for="IsEmergency">Is Emergency</label>
        <input type="checkbox" asp-for="IsEmergency " class="custom-checkbox" />

        <span class="text-danger" asp-validation-for="IsEmergency">  </span>
        <br />


        <label asp-for="AnimalId"> Choose Animal </label><br />
       <select asp-items="@aniList" asp-for="AnimalId" class="custom-select">
            <option value="">choose Pet</option>
        </select>
        <span class="text-danger" asp-validation-for="AnimalId">  </span>

        <br />

        <label asp-for="DiseaseId"> Choose Disease </label><br />
        <select asp-items="@diseasList" asp-for="DiseaseId" class="custom-select">
            <option value="">choose Disease</option>
        </select>
        <span class="text-danger" asp-validation-for="DiseaseId">  </span>



        <br />
        <input type="submit" class="btn btn-primary" name="name" value="submit" />





    </form>


</div>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
