@model ProjectBackEndDemo.Areas.Sensor.Models.UserAnimalVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using ProjectBackEndDemo.Resource
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> AppLng
@{
    ViewData["Title"] = AppLng["Pet"];
    Layout = "~/Views/Layouts/MainLayout.cshtml";
    var Culuture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
    if (Model.pictureSrc == null)
    {
        Model.pictureSrc = "DefaultPhoto.jpg";
    }

}
<link href="~/css/viewpet.css" rel="stylesheet" />

@if (Culuture == "ar-EG")
{
    <link href="~/css/viewpet-ar.css" rel="stylesheet" />
}


<section class="viewprofile">
    <h3 class="heading"> @AppLng["View Pet Profile"] </h3>
    <div class="container">
        <div class="viewprofile-picture">
            <img src="/Files/UserAnimalPictures/@Model.pictureSrc" alt="profile" class="viewprofile-img">
            <div class="viewprofile-link">
                <i class="fa-solid fa-camera"></i>
                <a asp-area="Sensor" asp-controller="SSensor" asp-action="EditPetProfilePicture">@AppLng["Edit Picture"] </a>
            </div>
        </div>
        <div class="profile-box pet-type">
            <div class="box-title">
                <h5>@AppLng["Pet Type"] </h5>
            </div>
            <div class="box-value">
                @Model.AnimalType
            </div>
        </div>
        <div class="profile-box pet-name">
            <div class="box-title">
                <h5>@AppLng["Pet Name"] </h5>
            </div>
            <div class="box-value">
              @Model.Name
            </div>
        </div>
        <div class="profile-box pet-gender">
            <div class="box-title">
                <h5>@AppLng["Pet gender"] </h5>
            </div>
            <div class="box-value">
                @Model.AnimalGenderType
            </div>
        </div>
       
        <div class="profile-box pet-age">
            <div class="box-title">
                <h5>@AppLng["Pet Age"]</h5>
            </div>
            <div class="box-value">
              @Model.AnimalStringAge
            </div>
        </div>
      
        <div class="profile-box viewprofile-edit">
            <a asp-area="Sensor" asp-controller="SSensor" asp-action="EditPetProfile"> @AppLng["Edit Pet Profile"]</a>
        </div>
    </div>
</section>



<script src="/js/jquery-3.6.0.min.js"></script>
<script src="~/js/viewpet.js"></script>