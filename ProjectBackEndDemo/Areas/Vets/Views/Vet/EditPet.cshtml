
@model ProjectBackEndDemo.DAL.Entities.Animal
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit Pet";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
    var Culuture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;

}

<link href="~/css/editpet.css" rel="stylesheet" />
@if (Culuture == "ar-EG")
{
    <link href="~/css/editpet-ar.css" rel="stylesheet" />
}


<div class="user-form">
    <h3 class="heading">Edit Pet Data</h3>
    <form asp-area="Vets" asp-controller="Vet" asp-action="EditPet" method="post">

        <input type="number" asp-for="Id" hidden/>


        <div class="editprofile-section">

            <img src="/assets/imgs/@Model.Name-life.webp" alt="profile" class="editprofile-img">

        </div>
        <div asp-validation-summary="All" class="text-danger">   </div>

        <div class="form-section text-section name-section">
            <label asp-for="Name" for="ny-username">Pet Name</label>
            <div class="input-section">
                <input readonly type="text" asp-for="Name" id="my-username" class="pet-name" placeholder="Enter Pet Name" required />
                <div class="input-icon">
                    <i class="fa-solid fa-file"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="Name">  </span>

        </div>

        <div class="form-section birthday-section">
            <label for="my-birthday" asp-for="StartTempreture">Start Tempreture</label>
            <div class="input-section">
                <input type="number" asp-for="StartTempreture" id="my-StartTempreture" class="pet-birthday" />
                <div class="birthday-icon">
                    <i class="fa-solid fa-calendar"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="StartTempreture">  </span>

        </div>
        <div class="form-section birthday-section">
            <label for="my-birthday" asp-for="EndTempreture">End Tempreture</label>
            <div class="input-section">
                <input type="number" asp-for="EndTempreture" id="my-EndTempreture" class="pet-birthday" />
                <div class="birthday-icon">
                    <i class="fa-solid fa-calendar"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="EndTempreture">  </span>

        </div>
        <div class="form-section birthday-section">
            <label for="my-birthday" asp-for="StartPulse"> Start Pulse </label>
            <div class="input-section">
                <input type="number" asp-for="StartPulse" id="my-StartPulse" class="pet-birthday" />
                <div class="birthday-icon">
                    <i class="fa-solid fa-calendar"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="StartPulse">  </span>

        </div>
        <div class="form-section birthday-section">
            <label for="my-birthday" asp-for="EndPulse"> End Pulse </label>
            <div class="input-section">
                <input type="number" asp-for="EndPulse" id="my-EndPulse" class="pet-birthday" />
                <div class="birthday-icon">
                    <i class="fa-solid fa-calendar"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="EndPulse">  </span>

        </div>

        <div class="form-section birthday-section">
            <label for="my-birthday" asp-for="StartGlucose"> Start Glucose </label>
            <div class="input-section">
                <input type="number" asp-for="StartGlucose" id="my-StartGlucose" class="pet-birthday" />
                <div class="birthday-icon">
                    <i class="fa-solid fa-calendar"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="StartGlucose">  </span>

        </div>
        <div class="form-section birthday-section">
            <label for="my-birthday" asp-for="EndGlucose"> End Glucose </label>
            <div class="input-section">
                <input type="number" asp-for="EndGlucose" id="my-EndGlucose" class="pet-birthday" />
                <div class="birthday-icon">
                    <i class="fa-solid fa-calendar"></i>
                </div>
            </div>
            <span class="text-danger" asp-validation-for="EndGlucose">  </span>

        </div>







        <div class="form-section save-section">
            <button type="submit" class="save-btn">Save</button>
        </div>
    </form>
</div>




<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script src="~/js/editpet.js"></script>
