@inject ProjectBackEndDemo.BL.Helpers.ISelectHelper slctHelper

@{
    ViewData["Title"] = "EditVet";
    Layout = "~/Views/Layouts/MainLayout.cshtml";
    var Cities = new SelectList(slctHelper.GetCities(), "Id", "Name");

}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjectBackEndDemo.Areas.Vets.Models.VetVM

<div class="container">
    <h1>Create Vet </h1>
    <div asp-validation-summary="All" class="text-danger">   </div>
    <form asp-area="Vets" asp-controller="Vet" asp-action="EditVet" method="post" class="form-group" enctype="multipart/form-data">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" placeholder="Name " class="form-control" />
        <span class="text-danger" asp-validation-for="Name">  </span>
        <br />
        <label asp-for="Address">Address</label>
        <input type="text" asp-for="Address" placeholder="Address " class="form-control" />
        <span class="text-danger" asp-validation-for="Address">  </span>
        <br />
        <label asp-for="age">Age</label>
        <input type="number" asp-for="age" placeholder="age " class="form-control" />
        <span class="text-danger" asp-validation-for="age">  </span>
        <br />
        <label asp-for="Telephone">Telephone</label>
        <input type="text" asp-for="Telephone" placeholder="Telephone " class="form-control" />
        <span class="text-danger" asp-validation-for="Telephone">  </span>
        <br />
        <label asp-for="CityId"> Select City </label>
        <select asp-for="CityId" asp-items="@Cities" class="custom-select-sm">
            <option> Select City </option>
        </select>
        <br />
        <label asp-for="Picture">Picture</label>
        <input type="file" asp-for="Picture" placeholder="Picture " class="form-control" />
        <span class="text-danger" asp-validation-for="Picture">  </span>
        <br />
        <input type="submit" class="btn btn-primary" name="name" value="submit" />
    </form>
</div>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>



